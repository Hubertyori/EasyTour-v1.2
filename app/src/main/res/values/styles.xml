<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <!--WheelView控件的样式-->
    <style name="wheelViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">3</item>
        <item name="lineColor">@android:color/transparent</item>
        <item name="bottomLineColor">#f5f5dc</item>
        <item name="lineHeight">3dp</item>
        <item name="firstLineAndSecondLineSpace">3dp</item>
        <item name="maskHight">27dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#99bfbfbf</item>
        <item name="normalTextSize">14sp</item>
        <item name="selectedTextColor">#4d4d4d</item>
        <item name="selectedTextSize">16sp</item>
        <item name="unitHight">25dp</item>
    </style>

    <!--WheelView控件的样式-->
    <style name="wheelViewStylebig">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">3</item>
        <item name="lineColor">@android:color/transparent</item>
        <item name="bottomLineColor">#f5f5dc</item>
        <item name="lineHeight">3dp</item>
        <item name="firstLineAndSecondLineSpace">7dp</item>
        <item name="maskHight">35dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#99bfbfbf</item>
        <item name="normalTextSize">14sp</item>
        <item name="selectedTextColor">#4d4d4d</item>
        <item name="selectedTextSize">17sp</item>
        <item name="unitHight">30dp</item>
    </style>

</resources>
